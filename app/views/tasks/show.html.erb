<div>
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <div>
    <%= check_box_tag "task_ids[]", @task.id, @task.completed %>
    <%= label_tag "task_ids_#{@task.id}", 'This task is not complete yet' %>
  </div>
  <div>
    <%= button_to "Delete",
      task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" }
    %>
  </div>
  <div>
    <%= link_to 'Back to list', tasks_path %>
  </div>
</div>
