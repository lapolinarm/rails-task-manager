<div>
  <h1>Edit task</h1>
  <%= form_with model: @task do |f| %>
    <div>
      <%= f.label :Title %>
    </div>
    <div>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :Details %>
    </div>
    <div>
      <%= f.text_field :details %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
  <%= link_to 'Back to list', tasks_path %>
</div>
